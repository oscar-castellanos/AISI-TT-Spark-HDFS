{
    "builders": [
        {
            "communicator": "ssh",
            "type": "vagrant",
            "source_path": "generic/centos7",
            "box_name": "aff-ocr-aisi2021tt/centos7",
            "provider": "virtualbox"
        }
    ],

    "provisioners": [
        {
            "type": "shell",
            "inline": ["yum -y install epel-release python-setuptools wget curl sshpass vim nano ansible"]
        },
        {
            "type": "ansible-local",
            "script": "provisioning/ansiblePacker/playbook.yml"
        },
        {
            "type": "shell",
            "script": "provisioning/java/setup-java.sh"
        },
        {
            "type": "shell",
            "script": "provisioning/spark/setup-spark.sh"
        },
        {
            "type": "shell",
            "inline": ["yum -y remove ansible sshpass python-setuptools epel-release"]
        }
    ]
}